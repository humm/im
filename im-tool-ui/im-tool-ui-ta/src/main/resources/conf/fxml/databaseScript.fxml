<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TextField?>
<AnchorPane fx:id="databaseScript" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hoomoomoo.im.controller.DatabaseScriptController">
    <children>
        <SplitPane dividerPositions="0.3" layoutX="98.0" layoutY="100.0" orientation="VERTICAL" prefHeight="400.0"
                   prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="162.0" prefWidth="599.0">
                    <children>
                        <ProgressIndicator fx:id="schedule" layoutX="530.0" layoutY="16.0" progress="0.0"/>
                        <Label fx:id="scheduleText" layoutX="570.0" layoutY="21.0" text="0%"/>

                        <Label layoutX="50.0" layoutY="70.0" prefHeight="15.0" prefWidth="80.0" text="脚本路径"/>
                        <TextField fx:id="databasePath" layoutX="125.0" layoutY="66.0" prefHeight="23.0"
                                   prefWidth="800.0"/>

                        <Label layoutX="50.0" layoutY="120.0" prefHeight="15.0" prefWidth="110.0" text="脚本文件数量"/>
                        <Label fx:id="fileNum" layoutX="150.0" layoutY="120.0" prefHeight="15.0" prefWidth="110.0"/>

                        <Label layoutX="300.0" layoutY="120.0" prefHeight="15.0" prefWidth="110.0" text="sql语句数量"/>
                        <Label fx:id="sqlNum" layoutX="400.0" layoutY="120.0" prefHeight="15.0" prefWidth="110.0"/>

                        <Label layoutX="550.0" layoutY="120.0" prefHeight="15.0" prefWidth="160.0" text="执行失败sql语句数量"/>
                        <Label fx:id="sqlFailNum" layoutX="710.0" layoutY="120.0" prefHeight="15.0" prefWidth="110.0"/>

                        <Button fx:id="selectDatabasePath" layoutX="950.0" layoutY="66.0"
                                mnemonicParsing="false" onAction="#selectDatabasePath" prefHeight="23.0"
                                prefWidth="25.0" text="···"/>

                        <Button fx:id="databaseExecute" layoutX="1050.0" layoutY="30.0" prefHeight="35.0"
                                prefWidth="100.0" mnemonicParsing="false"
                                text="执行" onAction="#databaseExecute"/>

                        <Button fx:id="databaseExecuteDetail" layoutX="1050.0" layoutY="100.0" prefHeight="35.0"
                                prefWidth="100.0" mnemonicParsing="false"
                                text="失败日志" onAction="#databaseExecuteDetail"/>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="598.0">
                    <children>
                        <TextArea fx:id="log" editable="false" layoutX="1.0" layoutY="-87.0" prefHeight="281.0"
                                  prefWidth="599.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
